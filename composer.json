{
	"name": "bible-exchange/bible-experience",
	"description": "The Learning Record System for Bible exchange.",
	"authors": [
        {
            "name": "Stephen Reynolds",
            "email": "sgrjr@deliverance.me"
        }
    ],
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"php": ">=5.5.9",
        "laravel/framework": "5.2.*",
		"webonyx/graphql-php": "^0.5.5",
        "laracasts/presenter": "dev-master",
		"league/glide":"dev-master",
		"tymon/jwt-auth": "0.5.*",
	 	"barryvdh/laravel-cors": "^0.8.0",
		"laravel/socialite": "^2.0",
		"nuwave/laravel-graphql-relay": "^0.3.3",
		"davejamesmiller/laravel-breadcrumbs": "2.2.x",
		"ramsey/array_column": "1.1.x",
		"learninglocker/statementfactory": "0.0.x",
		"seld/jsonlint": "^1.4",
		"bshaffer/oauth2-server-php": "1.7.x",
		"bshaffer/oauth2-server-httpfoundation-bridge": "1.1.x",
		"league/flysystem": "~1.0",
		"league/flysystem-rackspace": "^1.0",
		"league/flysystem-copy": "^1.0",
		"league/flysystem-dropbox": "^1.0",
		"league/flysystem-azure": "^1.0",
		"league/flysystem-aws-s3-v3": "^1.0",
		"itsgoingd/clockwork": "~1.10",
		"laravelcollective/html": "5.2.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"BibleExperience\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php",
			"tests/ApiTester.php"
		]
	},
    "scripts": {
		"post-install-cmd": [
		  "sh refresh.sh"
		],
		"post-update-cmd": [
		  "php artisan clear-compiled",
		  "sh refresh.sh"
		],
		"post-create-project-cmd": [
		  "php artisan key:generate"
		]
	  },
    "config": {
        "preferred-install": "dist",
		"secure-http": false
    },
	"minimum-stability": "stable"
}

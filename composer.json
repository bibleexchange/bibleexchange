{
	 "name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.2.*",
		"webonyx/graphql-php": "^0.5.5",
		"folklore/graphql": "^0.4.0",
		"laravelcollective/html": "5.2.*",
		"laracasts/flash": "dev-master",
        "laracasts/presenter": "dev-master",
		"mandrill/mandrill": "dev-master",
        "guzzlehttp/guzzle": "6.0.1",
		"graham-campbell/markdown": "^6.0",
		"league/glide":"dev-master",
		"yangqi/htmldom": "dev-master",
		"evernote/evernote-cloud-sdk-php":"dev-master",
		"tymon/jwt-auth": "0.5.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
        "mockery/mockery": "~0.9",
        "summerstreet/woodling": "~0.1.6",
		"symfony/dom-crawler": "~3.0",
		"symfony/css-selector": "~3.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"BibleExchange\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php",
			"tests/ApiTester.php"
		]
	},
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
